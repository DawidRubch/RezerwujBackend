{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": "./src",
    "module": "commonjs",
    "outDir": "/build",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", "src/server.ts", "adapters"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
